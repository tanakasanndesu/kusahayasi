<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <%= image_tag board.board_image.url, width: 300, height: 200, class: 'card-img-top' %>
      <div class="card-body">
        <div class="d-flex">
          <h4 class="card-title">
            <%= link_to board.title, board_path(board) %>
          </h4>
        </div>
        <div class="d-flex justify-content-end">
          <%= render "shared/crud_menus", { board: board } if current_user.own?(board) %>
          <% if current_user.bookmark?(board) %>
            <%= render 'unbookmark', { board: board } %>
          <% else %>
            <%= render 'bookmark', { board: board } %>
          <% end %>
        </div>
        <ul class="list-inline">
          <li><i class="bi bi-person"></i><%= board.user.decorate.full_name %></li>
          <li><i class="bi bi-calendar"></i><%= l board.created_at, format: :short %></li>
        </ul>
        <p class="card-text"><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
