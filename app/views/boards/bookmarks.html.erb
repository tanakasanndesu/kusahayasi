<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
        <%= render "search", q: @q, url: bookmarks_boards_path %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @bookmark_boards.present? %>
           <%= render @bookmark_boards %>
           <%= paginate @bookmark_boards, theme: 'bootstrap-5' %>
        <% else %>
          <p><%= t('ブックマーク中の掲示板がありません') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
